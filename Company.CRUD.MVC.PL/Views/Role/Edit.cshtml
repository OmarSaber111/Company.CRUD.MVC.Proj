@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>
<br/>
<br/>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="alert alert-danger" ></div>

    <partial name="RolePartialViews/EditCreateEmployeePartialView" model="Model" />

    <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="btn btn-primary">Add Or Remove User</a>

    <input type="submit" value="Save" class="btn btn-success" />

    <a  asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section ClientValidation {

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


}

