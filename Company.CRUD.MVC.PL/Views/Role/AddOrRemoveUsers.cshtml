@model List<UserInRoleViewModel>

@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["RoleId"] as string;
}


<form asp-action="AddOrRemoveUsers" asp-route-roleId="@RoleId" class="bg-dark border border-secondary p-5 m-3 text-white fs-5">
    <h1>Users for @ViewData["RoleName"] Role</h1>
    <hr />
    <br />

    @for(int i = 0; i<Model.Count(); i++)
    {
  

    <div class="form-group ">
        <input asp-for="@Model[i].IsSelected"/>
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
    </div>
        <input type="hidden" asp-for="@Model[i].UserName" />
        <input type="hidden" asp-for="@Model[i].UserId" />


    }

    <br />
    <br />
    <input type="submit" value="Update" class="btn btn-success"/>
    <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-light"> Cancel</a>
</form>

