 @model SignUpViewModel


@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div asp-validation-summary="All">

	</div>
	<div class="agileits-top">
		<form asp-action="SignUp" method="post">
			<input class="text m-2" type="text" asp-for="UserName" placeholder="Username" required="">
			<input class="text m-2" type="text" asp-for="FirstName" placeholder="First Name" required="">
			<input class="text m-2" type="text" asp-for="LastName" placeholder="Last Name" required="">
			<input class="text email m-2" type="email" asp-for="Email" placeholder="Email" required="">
			<input class="text m-2 " type="password" asp-for="Password" placeholder="Password" required="">
			<input class="text  m-2 " type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Already Have An Email? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>

